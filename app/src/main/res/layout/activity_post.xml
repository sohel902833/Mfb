<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".PostActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <include
       layout="@layout/app_ber_layout"
       android:id="@+id/update_Post_Page_Toolbar"
       />
<ImageButton
    android:layout_below="@+id/update_Post_Page_Toolbar"
    android:id="@+id/select_post_Image"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/select_image"
    android:scaleType="fitCenter"
    />

    <EditText
        android:id="@+id/post_discription"
        android:layout_below="@+id/select_post_Image"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/inputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Write Something on your mind"
        />
    <Button
        android:layout_below="@+id/post_discription"
        android:id="@+id/update_Post_Button"
       android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Post"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"

        />


    </RelativeLayout>

</ScrollView>